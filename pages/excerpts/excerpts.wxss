/* pages/excerpts/excerpts.wxss */

page{
  background-color: #E4E4E4;
  width: 100%;
  height: 100%;
}

.root_view{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.view_conent{
  position: relative;
  background: #fff;
  width: 90%;
  height: 80%;
}

/**
 * writing-mode: vertical-rl; 从右向左显示
 * word-wrap: break-word;  暂时无效
 * float: right; 控件居右对齐 暂时无效
 */
.tv_share_content{
  position: absolute;
  right: 10px;
  margin-top: 30px;
  height: 65%;
  width: 15px;
  font-size: 15px;
  letter-spacing: 8px;
  writing-mode: vertical-rl;
}

/**
  * position:relative绝对定位使用通常是父级定义position:relative定位，子级定义position:absolute绝对定位属性
  *
  */
.tv_title{
  position: absolute;
  bottom: 30px;
  left: 10px;
  font-size: 15px;
  letter-spacing: 8px;
  writing-mode: vertical-rl;
  text-align: center
}
